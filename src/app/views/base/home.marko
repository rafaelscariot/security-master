        <!-- PAGE CONTENT -->

        <h3>
          <script>
            const hour = new Date().getHours();
            let status = "";
            if (hour < 12 && hour >= 6) {
              status = "Bom dia";
            } else if (hour >= 12 && hour < 18) {
              status = "Boa tarde";
            } else {
              status = "Boa noite";
            }

            const userName = localStorage.getItem("userName").split(" ")[0];

            document.write(status + ", " + userName + "!");
          </script>
        </h3>
        
        <p>
          Confira o andamento da segurança da sua propriedade.
